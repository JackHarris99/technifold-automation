# ============================================================================
# Next.js / Vercel Configuration
# ============================================================================
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# ============================================================================
# Stripe Configuration
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================================================
# Resend Email Configuration (Required for email sending)
# ============================================================================
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# Zoho Books Configuration (Optional - NOT CURRENTLY USED)
# ============================================================================
ZOHO_BOOKS_API_BASE=https://books.zoho.com/api/v3
ZOHO_ORGANIZATION_ID=your-org-id
ZOHO_CLIENT_ID=your-client-id
ZOHO_CLIENT_SECRET=your-client-secret
ZOHO_REFRESH_TOKEN=your-refresh-token
ZOHO_WEBHOOK_SECRET=your-webhook-secret

# ============================================================================
# Security & Token Configuration
# ============================================================================
# Secret for HMAC-signing tokenized offer links (generate with: openssl rand -base64 32)
TOKEN_HMAC_SECRET=your-random-secret-here

# Secret for protecting cron endpoints (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here

# Secret for admin user setup endpoint (generate with: openssl rand -base64 32)
ADMIN_SECRET=your-admin-secret-here

# ============================================================================
# Node.js Configuration
# ============================================================================
NODE_ENV=development
