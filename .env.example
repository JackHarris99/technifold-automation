# ============================================================================
# Next.js / Vercel Configuration
# ============================================================================
NEXT_PUBLIC_BASE_URL=https://yourdomain.com

# ============================================================================
# Supabase Configuration
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...

# ============================================================================
# Stripe Configuration
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ONE Stripe Product for dynamic pricing (price_data approach)
# Create a single product in Stripe Dashboard called "Technifold Subscription"
# Copy the product ID (starts with prod_) - NO price IDs needed
STRIPE_PRODUCT_ID=prod_...

# ============================================================================
# Resend Email Configuration (Required for email sending)
# ============================================================================
RESEND_API_KEY=re_...

# From addresses per email type (set up subdomains in Resend first)
RESEND_FROM_EMAIL=noreply@technifold.com
RESEND_FROM_EMAIL_TRIALS=trials@technifold.com
RESEND_FROM_EMAIL_MARKETING=marketing@technifold.com
RESEND_FROM_EMAIL_QUOTES=quotes@technifold.com

# ============================================================================
# Security & Token Configuration
# ============================================================================
# Secret for HMAC-signing tokenized offer links (generate with: openssl rand -base64 32)
TOKEN_HMAC_SECRET=your-random-secret-here

# Secret for protecting cron endpoints (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here

# Secret for admin user setup endpoint (generate with: openssl rand -base64 32)
ADMIN_SECRET=your-admin-secret-here
NEXT_PUBLIC_ADMIN_SECRET=your-admin-secret-here

# ============================================================================
# Node.js Configuration
# ============================================================================
NODE_ENV=development
